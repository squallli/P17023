<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="5dip"
  android:paddingBottom="15dp"
  android:background="@drawable/shape_item_background"
  android:orientation="horizontal"
  android:weightSum="1">

  <RelativeLayout
    android:id="@+id/row02"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="23dp"
    android:layout_alignParentTop="true"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/txtOrigin"
      android:layout_width="45dp"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@+id/txtOrigin2"
      android:gravity="center"
      android:text="123"
      android:textColor="#000000"
      android:textSize="18sp" />

    <TextView
      android:id="@+id/txtOrigin2"
      android:layout_width="35dp"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@+id/txtNew"
      android:gravity="center"
      android:text="123"
      android:textColor="#000000"
      android:textSize="18sp" />

    <TextView
      android:id="@+id/txtNew"
      android:layout_width="55dp"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:gravity="center"
      android:text="123"
      android:textColor="#000000"
      android:textSize="18sp" />

  </RelativeLayout>
  <RelativeLayout
    android:id="@+id/row01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <ImageView
      android:id="@+id/imgItem"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_gravity="center_vertical"
      android:padding="3dp"
      android:background="@drawable/shape_image_background"
      android:scaleType="fitCenter" />

    <TextView
      android:id="@+id/txtItemInfo"
      android:layout_width="115dp"
      android:layout_height="66dp"
      android:layout_marginLeft="10dp"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@+id/imgItem"
      android:ellipsize="end"
      android:gravity="center_vertical"
      android:maxLines="3"
      android:text="商品資訊"
      android:textColor="#000000"
      android:textSize="15sp" />
  </RelativeLayout>
</RelativeLayout>
