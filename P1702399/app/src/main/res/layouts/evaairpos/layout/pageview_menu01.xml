<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menu"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/row01"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_btn_back_update"
            android:textColor="@drawable/selector_btn_text"
            android:paddingTop="50dp"
            android:text="Update"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:id="@+id/btnUpdate"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/row02"
        android:layout_below="@+id/row01" >

        <Button
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_btn_back_sale"
            android:textColor="@drawable/selector_btn_text"
            android:paddingTop="50dp"
            android:text="Sale"
            android:textAllCaps="false"
            android:id="@+id/btnSale"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <Button
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_btn_back_refund"
            android:textColor="@drawable/selector_btn_text"
            android:paddingTop="50dp"
            android:textSize="20sp"
            android:text="Refund"
            android:textAllCaps="false"
            android:id="@+id/btnRefund"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@+id/btnFunc02" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/row03"
        android:layout_below="@+id/row02" >

        <Button
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_btn_back_preorder"
            android:textColor="@drawable/selector_btn_text"
            android:textSize="20sp"
            android:paddingTop="50dp"
            android:text="Pre-order"
            android:textAllCaps="false"
            android:id="@+id/btnPreorder"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <Button
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_btn_back_transfer"
            android:textColor="@drawable/selector_btn_text"
            android:textSize="20sp"
            android:paddingTop="50dp"
            android:text="Transfer"
            android:textAllCaps="false"
            android:id="@+id/btnTransfer"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/row04"
        android:layout_below="@+id/row03" >
        <Button
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_btn_back_report"
            android:textColor="@drawable/selector_btn_text"
            android:textSize="20sp"
            android:paddingTop="50dp"
            android:text="Report"
            android:textAllCaps="false"
            android:id="@+id/btnReport"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <Button
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="5dp"
            android:background="@drawable/selector_btn_back_wifi"
            android:textColor="@drawable/selector_btn_text"
            android:textSize="20sp"
            android:paddingTop="50dp"
            android:text="Wi-Fi"
            android:textAllCaps="false"
            android:id="@+id/btnWifi"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>

    </LinearLayout>


</RelativeLayout>
