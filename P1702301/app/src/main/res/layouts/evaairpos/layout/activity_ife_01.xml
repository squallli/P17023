<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.com.regalscan.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorEVA" />


    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/titleLine"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Wi-Fi"
        android:textColor="@color/colorText"
        android:textSize="20sp" />

    <View
        android:id="@+id/titleLine"
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/toolbar"
        android:background="#1CB074" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleLine"
        android:layout_marginTop="40dp">


        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar">

                <LinearLayout
                    android:id="@+id/row01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnEX2"
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_btn_back_cor"
                        android:scaleType="centerCrop"
                        android:text="77M/A333"
                        android:textAllCaps="false"
                        android:textColor="@drawable/selector_btn_text"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/row01"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnEX3"
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_btn_back_cor"
                        android:scaleType="centerCrop"
                        android:text="77A/77B"
                        android:textAllCaps="false"
                        android:textColor="@drawable/selector_btn_text"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/row02"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn787"
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_btn_back_cor"
                        android:scaleType="centerCrop"
                        android:text="787"
                        android:textAllCaps="false"
                        android:textColor="@drawable/selector_btn_text"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/row05"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnOrderList"
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_btn_back_cor"
                        android:scaleType="centerCrop"
                        android:text="Order List"
                        android:textAllCaps="false"
                        android:textColor="@drawable/selector_btn_text"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/row03"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDealInProgress"
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_btn_back_cor"
                        android:scaleType="centerCrop"
                        android:text="Deal in Progress"
                        android:textAllCaps="false"
                        android:textColor="@drawable/selector_btn_text"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rowBtn03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnReturn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_back"
                        android:scaleType="centerCrop"
                        android:text="Return"
                        android:textAllCaps="false"
                        android:textColor="@drawable/selector_btn_text"
                        android:textSize="20sp" />

                </LinearLayout>


            </RelativeLayout>


            <android.support.design.widget.NavigationView
                android:id="@+id/navigation_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start">
                <!--app:headerLayout="@layout/drawer_header" >-->
                <!--app:menu="@menu/drawer" >-->

                <!-- cacheColorHint：系统默认拖动过程中列表背景是黑的,设置为透明 -->
                <ExpandableListView
                    android:id="@+id/expendlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000">
                    <!--android:layout_marginTop="100dp"-->

                    <!--父項與子項的分隔線-->
                    <!--android:divider="@drawable/gbt"-->
                    <!--android:childDivider="@drawable/fij">-->
                </ExpandableListView>
            </android.support.design.widget.NavigationView>


        </android.support.v4.widget.DrawerLayout>


    </RelativeLayout>


</RelativeLayout>
