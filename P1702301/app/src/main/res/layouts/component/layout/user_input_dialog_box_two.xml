<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogTitle01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origin Password"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
      android:layout_below="@+id/dialogTitle01"
        android:id="@+id/userInputDialog01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword" />

    <TextView
      android:layout_marginTop="20dp"
      android:layout_below="@+id/userInputDialog01"
      android:id="@+id/dialogTitle02"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="New Password"
      android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
      android:layout_below="@+id/dialogTitle02"
      android:id="@+id/userInputDialog02"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textPassword" />
</RelativeLayout>