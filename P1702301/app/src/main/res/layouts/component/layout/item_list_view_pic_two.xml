<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:paddingBottom="15dp"
    android:background="@drawable/shape_item_background"
    android:orientation="horizontal"
    android:weightSum="1">


    <ImageView
      android:id="@+id/imgItem"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:layout_gravity="center_vertical"
      android:padding="3dp"
      android:background="@drawable/shape_image_background"
      android:scaleType="fitCenter"
      android:src="@drawable/noimage" />



    <RelativeLayout
      android:id="@+id/layout_txtItem_parent"
      android:layout_centerVertical="true"
      android:layout_toEndOf="@+id/imgItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


      <RelativeLayout
        android:id="@+id/layout_txtItem"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <RelativeLayout
          android:id="@+id/layout_ItemTag01"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="3dp">

          <TextView
            android:id="@+id/txtMagazineNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="012"
            android:textColor="#000000"
            android:textSize="18sp" />

          <RelativeLayout
            android:id="@+id/txtMoneyInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txtMagazineNum">

            <TextView
              android:id="@+id/txtMoneyType"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="5dp"
              android:layout_centerVertical="true"
              android:layout_toLeftOf="@+id/txtMoney"
              android:text="US"
              android:textColor="#666"
              android:textSize="18sp" />

            <TextView
              android:id="@+id/txtMoney"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:text="123.00"
              android:textColor="#666"
              android:textSize="18sp" />

          </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/layout_ItemTag01">

          <TextView
            android:id="@+id/txtItemInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="商品名稱"
            android:textColor="#000000"
            android:textSize="18sp" />

        </RelativeLayout>


      </RelativeLayout>


      <TextView
        android:id="@+id/txtStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/layout_txtItem"
        android:text="123"
        android:textColor="#000000"
        android:textSize="18sp" />

      <TextView
        android:id="@+id/txtQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="123"
        android:textColor="#000000"
        android:textSize="18sp" />

    </RelativeLayout>



  </RelativeLayout>

</RelativeLayout>